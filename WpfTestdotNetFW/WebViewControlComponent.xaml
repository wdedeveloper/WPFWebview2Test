<UserControl x:Class="WpfTestdotNetFW.WebViewControlComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTestdotNetFW"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="rowView" Height="Auto"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Tst" Grid.Row="2" Panel.ZIndex="100" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click"></Button>
        <wv2:WebView2CompositionControl Grid.Row="0" Visibility="Visible" MinHeight="1" Panel.ZIndex="99" Name="webView" Loaded="webView_Loaded" />
        <GridSplitter Name="gSplitter" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></GridSplitter>
        <wv2:WebView2CompositionControl Grid.Row="2" Visibility="Collapsed" Panel.ZIndex="99" Name="webView2" Loaded="webView2_Loaded" />
    </Grid>
</UserControl>
